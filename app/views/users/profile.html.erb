	<% if @user.admin %>
		<%= link_to "Change/view users", '/admin_panel/users', class: "btn btn-small"%>
		<%= link_to "Change/view howto's", 'admin_panel/howto', class: "btn btn-small" %>
	<% end %>
</div>


